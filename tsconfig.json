{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@electron/*": ["electron/*"],
      "@frontend/*": ["frontend/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": ["frontend/**/*", "core/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
